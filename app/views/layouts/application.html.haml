!!!
%html
  %head
    %title CSV Uploader
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags

  %body
    .navbar.navbar-inverse.navbar-fixed-top{role: 'navigation'}
      .container
        .navbar-header
          %button.navbar-toggle{data: { toggle: 'collapse', target: '.navbar-collapse' }}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to 'CSV Uploader', root_path, class: 'navbar-brand'

        .navbar-collapse.collapse
          - if user_signed_in?
            = render 'layouts/navbar_authenticated'
          - else
            = render 'layouts/navbar_unauthenticated'

    = yield :header

    .container
      = render 'layouts/flash'
      = yield
      %hr
      %footer
        &copy; #{link_to 'Matt Huggins', 'https://github.com/mhuggins'} #{Date.today.year}
